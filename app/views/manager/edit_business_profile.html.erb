<%= render 'manager/menu' %>

<section>
	<h3 class="mtop20">Add Business Profile</h3>
	
	<%= form_tag manager_update_business_profile_path, :method => :post, class: "content-form" do %>
	
		<p>
      <%= label_tag "business_name", "Business Name" %>
      <%= text_field_tag "business_name", @business.business_name, required: 'required' %>
    </p>
    <p>
      <%= label_tag "business_category_id", "Business Category" %>
      <%= select_tag "business_category_id", options_from_collection_for_select(BusinessCategory.all, "id", "name", @business.business_category_id.to_i) %>
    </p>
    <p>
      <%= label_tag "street", "Street" %>
      <%= text_field_tag "street",@business.street, required: 'required' %>
    </p>
    <p>
      <%= label_tag "town", "Town" %>
      <%= text_field_tag "town", @business.town, required: 'required' %>
    </p>
    <p>
      <%= label_tag "county", "County" %>
      <%= text_field_tag "county", @business.county, required: 'required' %>
    </p>
    <p>
      <%= label_tag "postcode", "Poscode" %>
      <%= text_field_tag "postcode", @business.postcode, required: 'required' %>
    </p>
    <p>
      <%= label_tag "telephone", "Telephone" %>
      <%= text_field_tag "telephone", @business.telephone %>
    </p>
    <p>
      <%= label_tag "website", "Website" %>
      <%= text_field_tag "website", @business.website %>
			<%= hidden_field_tag "business_account_id", @business.id %>
    </p>
    <% unless @business.image.blank? %>
      <p>
        <%= label_tag "Current Logo" %>
        <%= image_tag @business.image_url.to_s %>
      </p>
    <% end %>
    <p>
      <%= label_tag "image", "Logo Upload" %>
      <%= file_field_tag "image" %>
    </p>

    <p>
      <%= label_tag "about_us", "About Us" %>
      <%= text_area_tag "about_us", @business.about_us %>
    </p>
    
    <p><%= submit_tag "Save", class: 'button' %></p>
	
	<% end %>
	
</section>


</section>