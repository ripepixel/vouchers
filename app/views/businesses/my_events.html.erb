<!-- begin page title -->
    <section id="page-title">
        <div class="container clearfix">
            <h1>Business Dashboard - My Events</h1>
        </div>
    </section>
    <!-- end page title -->
    	<%= render 'businesses/menu' %>
        
		<!-- begin main content -->
        <section id="main" class="three-fourths column-last">
        	<h2>My Events</h2>
            <p><%= link_to "Create Event", new_event_path, class: "button" %></p>
			<table class="gen-table">
				<thead>
					<tr>
						<th>Title</th>
						<th>Start Date</th>
						<th>End Date</th>
						<th>Active?</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @events.each do |event| %>
					<tr>
						<% is_active = event.active == true ? '<i class="icon-ok green"></i>' : '<i class="icon-remove red"></i>' %>
						<td><%= event.title %></td>
						<td><%= l event.date_from %></td>
						<td><%= l event.date_to %></td>
						<td><%= is_active.html_safe %></td>
						<td><%= link_to "Edit", edit_event_path(event) %> | <%= link_to 'Delete', event, method: :delete, confirm: 'Are You Sure?' %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

			<%= will_paginate @events %>
            
        </section>
        <!-- end main content -->
    </section>
    <!-- end content --> 