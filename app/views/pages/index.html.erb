<!-- begin page title -->
    <section id="page-title">
    	<div class="container clearfix">
            <h1>Vouchers</h1>
        </div>
    </section>
    <!-- end page title -->
    
    <!-- begin content -->
    <section id="content" class="container clearfix">
    
        	<div class="two-thirds">
                <section>
                    <p><form class="content-form"><input type="text" name="search" placeholder="Search Vouchers" class='search-input' /></form></p>
                </section>

                <% @featured.each do |feat| %>
                    <div class="introbox">
                        <h1><strong><%= feat.title %></strong> at <%= feat.business_account.business.business_name %> in <%= feat.business_account.business.town %></h1>
                        <div class="buttons-wrap"><%= link_to "Get Voucher", web_voucher_path(feat), class: "button large red" %></div>
                        <%= image_tag 'ribbon-featured.png' %>
                    </div>
                <% end %>

                <% @vouchers.each do |voucher| %>
                    <div class="introbox">
                        <h1><strong><%= voucher.title %></strong> at <%= voucher.business_account.business.business_name %> in <%= voucher.business_account.business.town %></h1>
                        <div class="buttons-wrap"><%= link_to "Get Voucher", web_voucher_path(voucher), class: "button large red" %></div>
                        <% if voucher.featured %>
                            <%= image_tag 'ribbon-featured.png' %>
                        <% end %>
                    </div>
                <% end %>


            </div>
        
        <div class="cat-menu">    
                <div class="one-third column-last">

                    <%= render 'layouts/side_cat_menu' %>

                    <%= render 'layouts/side_business_login' %>

                    <%= render 'layouts/side_blog' %>
                    
                    <div class="clear"></div>
                </div>
            </div>
        
        
        
    </section>
    <!-- end content -->  